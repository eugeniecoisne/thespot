<div class="homebanner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path "terrace1.jpg" %>)">
  <div class="container">
    <h1>Rent the best places to party !</h1>
    <%= simple_form_for :filter, url: places_path, method: :get do |f| %>
      <%= f.input :address, placeholder: "Search a city...", label: false, input_html: { class: 'homepage' }  %>
      <%= f.input :category, prompt: "Select a category...", label: false, collection: Place::CATEGORIES, input_html: { class: 'homepage' } %>
      <%= f.submit 'Search', class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
