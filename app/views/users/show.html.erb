<div class="container">
  <div class="row justify-content-center mt-4">
    <div class="col-10">
      <h3>My bookings</h3>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Date</th>
            <th scope="col">Status</th>
            <th scope="col">Place</th>
            <th scope="col">Address</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
            <% @current_user.bookings.sort_by { |booking| booking.date }.reverse.each do |booking| %>
              <tr>
                <td><%= booking.date %></td>
                <td>
                  <% if booking.date >= Date.today %>
                    to come
                  <% else %>
                    old
                  <% end %>
                </td>
                <td><%= link_to booking.place.title, place_path(booking.place) %></td>
                <td><%= booking.place.address %></td>
                <td>
                  <%= link_to edit_booking_path(booking) do %>
                    <i class="fas fa-pencil-alt"></i>
                  <% end %>
                  <%= link_to booking_path(booking), method: :delete, date: { confirm: 'Are you sure?' } do %>
                    <i class="fas fa-trash-alt"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row justify-content-center mt-4">
    <div class="col-10">
      <h3>My places</h3>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Place</th>
            <th scope="col">Address</th>
            <th scope="col">Number of bookings</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
            <% @current_user.places.each do |place| %>
              <tr>
                <td><%= place.title %></td>
                <td><%= place.address %></td>
                <td><%= place.bookings.count %></td>
                <td>
                  <%= link_to edit_place_path(place) do %>
                    <i class="fas fa-pencil-alt"></i>
                  <% end %>
                  <%= link_to place_path(place), method: :delete, date: { confirm: 'Are you sure?' } do %>
                    <i class="fas fa-trash-alt"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
