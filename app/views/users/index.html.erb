<div class="container">
  <div class="row justify-content-center">
    <h3>All users</h3>

    <% @users.each do |user| %>
      <ul class="list-group">
        <li class="list-group-item active">
          <%= user.first_name %> <%= user.last_name[0] %>

          </li>
      </ul>





      <div class="card col-4" style="width: 18rem;">
        <% if current_user.photo.attached? %>
          <%= cl_image_tag current_user.photo.key, class: "card-img-top" %>
        <% else %>
          <%= image_tag "https://i48.servimg.com/u/f48/16/78/05/90/myster10.png", class: "card-img-top" %>
        <% end %>
        <div class="card-body">
          <p class="card-text"><%= user.first_name %><%= user.last_name[0] %></p>
          <p class="card-text">
            <% ratings = 0 %>
            <% user.user_reviews.each do |review| %>
              <% rating += review.rating %>
            <% end %>
            <%= (ratings / 2) %>
          </p>
          <a href="#" class="btn btn-primary">View details</a>
        </div>
      </div>
    <% end %>
  </div>
</div>




