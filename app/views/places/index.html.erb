<div class="placescontainer">
  <div class="places-cards">
    <% @places.each do |place| %>
      <%= link_to place_path(place) do %>
      <div class="places-card">
        <% if place.photos.attached? %>
          <div class="img-places-card" style="background-image: url('<%= cl_image_path place.photos.sample.key %>')">
          </div>
        <% else %>
          <div class="img-places-card" style="background-image: url('<%= image_path "monkey.jpg" %>')">
          </div>
        <% end %>
        <div class="places-card-infos">
          <div>
            <h2><%= place.title %></h2>
            <p><%= place.address %></p>
          </div>
          <div>
            <h2><%= place.price %> â‚¬</h2>
            <p><i class="fas fa-users pr-2"></i><%= place.capacity %></p>
          </div>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
  <div id="map"
        style="width: 100%;
       height: 100vh;
       position: sticky;
       top: 0;"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="pk.eyJ1IjoidGhvbWFzLXJvc2U3NiIsImEiOiJjazYyOGRieWgwYWlyM2Zxd29rZ2hiOGJsIn0.uq_GyWQAqSz7DsRV2rLLTg">
  </div>
</div>
